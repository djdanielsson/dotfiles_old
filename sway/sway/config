# Some useful shortcuts
bindsym $mod+Shift+w exec firefox
bindsym $mod+Shift+s exec spotify
bindsym $mod+Shift+d exec discord
bindsym $mod+Shift+t exec telegram-desktop
#bindsym $mod+Shift+a exec atom
#bindsym $mod+Shift+g exec gimp
bindsym $mod+x exec ~/.config/sway/rofi-power.sh

# Assign some windows to workspaces
assign [title="Spotify"] 1
assign [app_id="firefox"] 2
assign [class="discord"] 3
assign [app_id="telegramdesktop"] 3
assign [class="Atom"] 4

for_window [class="discord"] move to workspace 3
for_window [app_id="telegramdesktop"] move to workspace 3
for_window [title="Spotify"] move to workspace 1
for_window [class="Atom"] move to workspace 4

# Tweak the title for some apps
for_window [title="."] title_format "<b>%title</b> (%app_id) (%class)"
for_window [title="Spotify"] title_format "  %title"
for_window [app_id="Alacritty"] title_format "  %title"
for_window [app_id="org.gnome.Nautilus"] title_format "  %title"
for_window [app_id="cherrytree"] title_format "  %title"
for_window [app_id="telegramdesktop"] title_format "  %title"
for_window [class="discord"] title_format "ﭮ  %title"
for_window [class="Atom"] title_format "  %title"
for_window [class="firefox"] title_format "  %title"



# Lockscreen
bindsym $mod+Shift+p exec bash ~/.config/sway/lock.sh

# Media controls
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +4%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -4%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioStop exec playerctl stop
bindsym XF86Search exec wofi --show drun -G -I -m -d
bindsym XF86MonBrightnessUp exec light -A 5
bindsym XF86MonBrightnessDown exec light -U 5

bindsym Print exec grim -t jpeg ~/Pictures/screenshots/$(date +%Y-%m-%d_%H-%m-%s).jpg -q 100
bindsym Shift+Print exec grim -t jpeg -g "$(slurp)" ~/Pictures/screenshots/$(date +%Y-%m-%d_%H-%m-%s).jpg



# Run Waybar on start
exec waybar

# Run playerctld on start
exec playerctld

# Run dunst on start
exec dunst

